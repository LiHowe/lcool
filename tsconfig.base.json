{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@lcool/api": ["packages/api/src/index.ts"],
      "@lcool/demo": ["packages/demo/src/index.ts"],
      "@lcool/docs": ["packages/docs/src/index.ts"],
      "@lcool/generator": ["packages/generator/src/index.ts"],
      "@lcool/utils": ["packages/utils/index.ts"],
      "lcool": ["packages/lcool/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
